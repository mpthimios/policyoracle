<% provide(:title, @user.name) %>
<div class="block2">
  	<div class="container_12">
    	<section class="">
      		<div class="wrapper">
      			<div class="user_performance">
      				<ul>
      					<li class="first">
                  <%= gravatar_for @user %>
                  <h1><%= @user.name %></h1>
                </li>
                <li>
      						<div class="subheaders1">Cash Available</div>
      						<h1><%= @user.cash_amount.round(2) %></h1>
					        <table class="prerformancecontent">
					          	<tbody>
						            <tr>
						                <td align="left">Investement amount:</td>
						                <td align="right" valign="middle"><%= @user.investment_amount.round(2) %></td>
					                </tr>
					                <tr>
						                <td align="left">Total cash:</td>
						                <td align="right" valign="middle"><%= @user.cash_amount.round(2) %></td>
					                </tr>						           
					                <tr>
						                <td align="left">Account value:</td>
						                <td align="right" valign="middle" class="summationline"><%= @user.total_amount.round(2) %></td>
					                </tr>
					          	</tbody>
					        </table>
					      </li>
  					    <li>
  					    	<div class="subheaders1">Rank</div>
        					<h1><%= @user.rank%> of <%= User.count %></h1>
        				</li>
      				</ul>
				    </div>
      		</div>
    	</section>
  	</div>
</div>
<div class="hireus_block">
  	<div class="container_12">
    	<section class="">
      		<div class="wrapper">
      			<div class="hello_box"> My Orders (<%= @holdings.count %>) </div>
        <% @holdings.each do |holding| %>
          <ol id="positions">
            <li class="posotion_group">
              <h2><%= link_to holding.contract.market.name, holding.contract.market, :class => "three" %></h2>
              <table class="headertable">
                <thead>
                  <tr>
                    <th><h4>YOUR PREDICTION </h4></th>
                    <th><h4>CURRENT PROFIT/LOSS</h4></th>
                    <th><h4>CROWD PREDICTION</h4></th>
                    <th><h4>SHARES </h4></th>
                    <th><h4>YOU'VE SPENT </h4></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td class="answered"><%= holding.contract.name if holding.contract %>
                    </td>
                    <td class="answered"><%= %></td>
                    <td  class="answered"><h4><%= holding.contract.current_price.round(4)*100 if holding.contract %>%</h4></td> 
                    <td class="details"><h4><%= holding.quantity %></h4></td> 
                    <td class="answered2"><%= holding.amount_spent %><h4><%=  %></h4></td> 
                  </tr>
                </tbody>
              </table>
              <% if holding.contract.market.status == true %>
                <h5 class="market_info">Closes: <%= holding.contract.market.arbitration_date %></h5>
              <% else %>
                <h6 class="market_info">Closed: <%= holding.contract.market.arbitration_date %></h6>
              <%end%>
            </li>
            <br>
          <ol>
        <% end %>
        <%= will_paginate(@holdings, :renderer => WillPaginate::ActionView::LinkRenderer) %>
      		</div>
      	</section>
    </div>
</div>

