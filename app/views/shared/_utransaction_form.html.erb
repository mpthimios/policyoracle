<%= form_for @utransaction do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
  	<div class="field">
    	<%= f.number_field :quantity, placeholder: "Place bet quantity ..." %>
  	</div>
  	<%= f.submit :value => "Buy", :name => 'utransaction[transaction_type]', class: "btn btn-small btn-success" %>
  	<%= f.submit :value => "Sell", :name => 'utransaction[transaction_type]', class: "btn btn-small btn-danger" %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :contract_id, :value => contract.id %>
<% end %>