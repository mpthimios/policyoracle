<%= form_for Utransaction.new, :html => {:class =>"form-inline"} do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<ul style="text-align: center">

    	<li style="margin-top:20px; margin-left:40px"><%= f.text_field :quantity, :class => "input-mini", :style => "width:40px"%> shares </li> 
    	<li style="margin-top:20px; margin-left:20px">Why?<br><%= f.text_field :comment, :class => "input-mini", :style => "width:140px"%> <br></li> 

    	<li style="margin-top:5px; margin-left:20px"><%= f.submit :value => "Buy", :name => 'utransaction[transaction_type]', class: "btn-sample"%></li>
    </ul>
    <%= f.hidden_field :user_id, 				:value => current_user.id %>
    <%= f.hidden_field :contract_id, 			:value => contract.id %>
    <%= f.hidden_field :contract_current_value, :value => contract.current_price %>
<% end %>
