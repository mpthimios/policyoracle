<%= form_for Utransaction.new, :html => {:class =>"form-inline", :style => "padding:0px 0px 1px 0px"} do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
  	<%= f.text_field :quantity, :id => "contract_" + contract.id.to_s, :value => 1, :class => "col-xs-3", :style => "margin-bottom:10px; margin-left:70px", :onkeyup=>"window.update_price(#{contract.id}); return false;" %>   shares
  	<%= f.submit :value => "Buy", :name => 'utransaction[transaction_type]', class: "btn-sample" %>
    <%= f.hidden_field :user_id, 				:value => current_user.id %>
    <%= f.hidden_field :contract_id, 			:value => @contract.id %>
    <%= f.hidden_field :contract_current_value, :value => @contract.current_price %>
<% end %>    


