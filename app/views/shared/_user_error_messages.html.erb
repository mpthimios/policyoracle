<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li style="font-weight: normal; list-style-type: disc;"><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>