<% @market.contracts.each do |contract| %>
    <div class="grid_9 contract">
    	<div class="grid_3" style="margin:0; padding:5px 0 10px 0" >
            <% if signed_in? && @market.status? %>
                <%= link_to contract.name, new_transaction_path(:utransaction => {:contract_id => contract.id, :contract_current_value => contract.current_price}), { 'data-toggle' =>  "modal", 'data-target' => '#modal-window', :class => "two", :style => "font-size: 14pt; margine-bottom:20px"} %>
            <% else %>
                <% if contract.market.correct_contract_id == contract.id %>
                    <div style="padding:0;border-radius: 5px 0px 0px 5px; border: 3px solid #92b5d5; border-right:none;">         
                    <h7 ><%= contract.name %></h7></div>
                <% else %>
                    <h7 style="opacity: 0.5;"><%= contract.name %></h7>
                <% end %>
            <% end %>
        </div>
        <div class="grid_2" style="margin:0 0 0 -2px; padding:5px 25px 10px 0;" >
            <% if contract.market.correct_contract_id == contract.id %> 
                <div style="padding:0 0 1px 0; border-radius: 0px 5px 5px 0px; border: 3px solid #92b5d5; border-left:none;">         
                <h7 style="font-size: 14pt; padding:0px 0px 0px 10px; margin-bottom:20px" id="current_price_<%= contract.id %>"><%= contract.current_price.round(2) %></h7></div>
            <% else %>
                <h7 style="font-size: 14pt; padding:0px 0px 0px 10px; margin-bottom:20px; opacity: 0.5;" id="current_price_<%= contract.id %>"><%= contract.current_price.round(2) %> </h7>
            <% end %>
    	</div>
        <div class="grid_2" style="margin:0; padding:5px 0 0 0;" >
            <% if contract.market.correct_contract_id == contract.id %> 
                <p style="font-size:16px; padding:5px 0px 0px 10px; margin:0; color:#92b5d5;">Correct Answer</p>
            <% end %>
        </div>
    </div>
<% end %>

<div id="modal-window" class="modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    </div>
  </div>
</div>