<% @market.contracts.each do |contract| %>
    <div class="grid_7 contract">
    	<div class="grid_3" style="margin:0; padding:5px 0 10px 0" >
            <% if signed_in? && @market.status? %>
                <%= link_to contract.name, new_transaction_path(:utransaction => {:contract_id => contract.id, :contract_current_value => contract.current_price}), { 'data-toggle' =>  "modal", 'data-target' => '#modal-window', :class => "two", :style => "font-size: 14pt; margine-bottom:20px"} %>
            <% else %>
                <h7><%= contract.name %></h7>
            <% end %>
        </div>
        <div class="grid_3" style="margin:0; padding:5px 0 10px 0;" >
        	   <h7 style="font-size: 14pt; padding:0px 0px 0px 10px; margin-bottom:20px" id="current_price_<%= contract.id %>"><%= contract.current_price.round(4)*100 %></h7>
    	</div>
    </div>
<% end %>

<div id="modal-window" class="modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    </div>
  </div>
</div>