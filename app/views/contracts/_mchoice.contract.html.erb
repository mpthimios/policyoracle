<% @market.contracts.each do |contract| %>
    <div class="grid_7 contract">
    	<article class="grid_2" style="margin:0" >
    		
        	<h3 class="mchoice"><%= link_to contract.name, new_transaction_path, :class => "three" %></h3>
        	
       
        </article>
        <article class="grid_1" style="margin:0" >
        	
        	   <h3 class="mchoice"><%= contract.current_price.round(4)*100%>%</h3>
            
    	</article>
        <article class="grid_3 transaction" style="text-align:right; margin:0">
            <%= render partial:'shared/utransaction_form', :locals => { :contract => contract} %>
        </article>
    </div>
<% end %>
