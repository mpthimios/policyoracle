<%= form_for :market, url: market_path(@market), method: :patch do |f| %>
  <% if @market.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@market.errors.count, "error") %> prohibited
      this article from being saved:</h2>
    <ul>
    <% @market.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div class="container">
    <div class="form-group">
      <label for="market_name">Your Question</label><br>
      <%= f.text_field :name, :class => "form-control",  :style => "width:100%" %>
    </div>
    <div class="form-vertical">
      <div class="form-group">
        <div class="col-xs-10" style="padding-left: 0px;">
          <label for="market_category">Type of the Question</label>
        </div><br>
        <select class="form-control input-large" name="market[market_type]">
            <option value="" selected disabled>Please select</option>
            <% @market.get_market_types.each do |market_type|%>
              <option><%= market_type%></option>
          <%end%>
        </select>
      </div>
    </div>
    <div class="form-vertical">
      <div class="form-group">
        <div class="col-xs-10" style="padding-left: 0px;">
          <label for="market_category">Category</label>
        </div><br>
        <select class="form-control input-large" name="market[category]">
          <option value="" selected disabled>Please select</option>
          <% @tenant.categories.each do |category|%>
            <option><%= category.name %></option>
          <%end%>
        </select>
      </div>
    </div>
    <div class="form-vertical">
      <div class="form-group">
          <label for="market_name">Tags</label><br>
          <%= f.text_field :tags, :class => "form-control",  :style => "width:100%" %>
      </div>
    </div>
    <div class="form-group">
      <label for="market_description">Description</label><br>
      <%= f.text_area :description, :class => "form-control" %>
    </div><br>
    <div class="form-group">
      <label for="market_description">Publication Date and time </label><br>
      <%= f.text_field :published_date, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label for="market_name">Arbitration Date and Time </label><br>
      <%= f.text_field :arbitration_date, :class => "form-control" %>
    </div>
   
    <p>
      <%= f.submit "Update Question", class: "btn btn-success btn-lg"%>
    </p>

  </div>
<% end %>
