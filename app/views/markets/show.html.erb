<% provide(:title, 'Forecasts') %>
<div class="block2">
  <div class="container_12">
    <section class="content">

      <div class="wrapper">
        <article class="grid_12 last-col">
          <div class="hello_box">  <%=  @market.name  %></div>
        </article>
      </div>

      <div class="wrapper">
        <article class="grid_4">
          <div class="feature">
            <div class="feature-binary-left blue">YES</div>
          </div>
        </article>

        <article class="grid_4">
          <div class="feature">
            <div class="feature-binary-right blue">NO</div>
          </div>
        </article>

        <article class="grid_10">
          <p id="center"> Modify the chances if you have a different opinion <br>by investing or changing your investments on the different outcomes </p>

          <article class="grid_6">
            <table class="table">
              <thead>
                <tr>
                  <th></th>
                  <th></th>
                  <th></th>  
                  <th></th>              
                </tr>
              </thead>
              <tbody>
                <% @contracts.each do |contract| %>
                  <tr>
                    <td>Invest in </td>
                    <td class="feature-binary-small blue"><%= contract.name %></td>
                    <% if signed_in?%>
                        <td><%= render partial: 'shared/utransaction_form', :locals => { :contract => contract} %></td>
                    <% end %>
                    <% if signed_in? && current_user.admin? %>
                      <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
                      <td><%= link_to 'Delete', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <ul class="blog_pagination">
              <%= link_to 'Back to Forecasts', markets_path, :class => "one" %> 
              <% if signed_in? && current_user.admin? %>
                | <%= link_to 'New Contract', new_market_contract_path(@market) %> 
                | <%= link_to 'Edit', edit_market_path(@market) %> 
                | <%= link_to 'Delete', @market, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </ul>
          </article>

          <article class="grid_4">

          </article>


        </article>

        <article class="grid_2">
          <p><strong>Arbitration date:</strong><br><%= @market.arbitration_date %></p>
          <p><strong>Category:</strong><br><%= @market.category %></p>
        </article>

      </div>
    </section>
  </div>
</div>

