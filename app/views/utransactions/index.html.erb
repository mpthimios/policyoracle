<% provide(:title, 'Trading History') %>
<div class="hireus_block">
  <div class="container_12">
    <section class="">
      <div class="wrapper">
        <h2>My Tradings (<%= @utransactions.count %>)</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Forecast </th>
              <th>Your Prediction </th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @utransactions.each do |utransaction| %>
              <tr>
                <td><%= utransaction.contract.market.name if utransaction.contract %></td>
                <td><%= utransaction.contract.name if utransaction.contract %></td>
                <td><%= utransaction.contract_current_value.round(2)*100 %></td>
                <td><%= utransaction.quantity %></td>
                <td><% if utransaction.transaction_type == 'B'%> Buyed
                    <% else %> Sold
                    <% end %>
                </td> 
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate(@utransactions, :renderer => WillPaginate::ActionView::LinkRenderer) %>

      </div>
    </section>
  </div>
</div>