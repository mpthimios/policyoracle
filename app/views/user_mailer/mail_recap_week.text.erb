A weekly activity report on questions that had activity

<% @utransactions = Utransaction.where("created_at >= ?", 1.week.ago.utc)%> 
<% @utransactions.each do |utransaction| %>
	<% @max_value = utransaction.market.contracts.maximum('current_price') %>
	<% @contract = utransaction.market.contracts.order("current_price DESC").first %>
	<%= link_to utransaction.contract.market.name, market_path(utransaction.contract.market), :class => 'three' %>
	<%= @contract.name %> currently leads with price/probability <%= @max_value.round(2) %>
<% end %>