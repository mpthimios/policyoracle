<div id="comment-<%= micropost.id %>" class="discussioncontainer gainlayout">
	<div class="left hidegravatars" style="width:60px">
		<%= link_to gravatar_for(micropost.user), micropost.user %>
	</div>
	<div class="left">
		<span class="largetext" style="font-style: italic" >
			<%= link_to micropost.user.name, micropost.user %>
		</span>
		<span class="timestamp tinycaps">
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.
		</span>
		<% if current_user?(micropost.user) %>
			<span class="timestamp tinycaps"><%= link_to "delete", micropost, method: :delete,
		                                 data: { confirm: "You sure?" },
		                                 title: micropost.content %></span>
		<% end %> 
	</div>               
	<div id="content"><%= micropost.content %></div>
</div>