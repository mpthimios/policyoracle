<% provide(:title, "Forgot Password") %>
<div class="block2">
  <div class="container_12">
    <section class="content">
      <div class="wrapper">
    		<article class="grid_12 last-col">
      			<div class="hello_box"> Forgot Password ?</div>
    		</article>

    		<article class="grid_9 last">
    			<%= form_for(:password_reset, url: password_resets_path) do |f| %>
    				<ul id="homehireus" class="project-filter">
      					<li>
              		<label style="width:80px">Email:</label>     
			    		     <%= f.text_field :email %>
			    	    </li>
                <li style="margin-left:80px;">
                  <%= f.submit "Reset Password", class: "btn-sample" %>
                </li>
			       </ul>
			     <% end %>
		    </article>
			</div>
		</section>
	</div>
</div>
