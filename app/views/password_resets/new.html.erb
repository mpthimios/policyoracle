<% provide(:title, "Reset Password") %>
<div class="block2">
  	<div class="container_12">
    	<section class="content">
      		<div class="wrapper">
        		<article class="grid_12 last-col">
          			<div class="hello_box"> Reset Password </div>
        		</article>

        		<article class="grid_9 last">
        			<%= form_tag password_resets_path, :method => :post do %>
        				<ul id="homehireus" class="project-filter">
          					<li>
                  				<label style="width:80px">Email:</label>     
					    		<%= text_field_tag :email, params[:email] %>
					    	</li>
					    </ul>
					  <div class="actions"><%= submit_tag "Reset Password", class: "button"  %></div>
					<% end %>
				</article>
			</div>
		</section>
	</div>
</div>
