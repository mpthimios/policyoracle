<header class="homepage">
  <h1><a class="logo" href="/"><span class="underline">Policy</span>Oracle</a></h1>
  <nav data-no-turbolink>
    <ul class="sf-menu">
      <li><%= link_to "Questions", markets_path %></li>
      <% if signed_in? %>
        <li><%= link_to "Portfolio", current_user %></li>
        <li><%= link_to "Leaderboard", users_path %></li>
        <li><%= link_to "How to Play?", howtoplay_path %></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.name %><span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          </ul>
        </li>

      <% else %>
        <li><%= link_to "How to Play?", howtoplay_path %></li>
        <li><%= link_to "Sign in", signin_path %></li>
        <li>/</li>
        <li><%= link_to "Sign up", signup_path %></li>
      <% end %>

      <% if current_user && current_user.admin %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">manage<span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Questions", markets_path %></li>
            <li><%= link_to "Users", users_path %></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </nav>
</header>