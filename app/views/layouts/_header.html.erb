<header class="homepage">
  <h1><a class="logo"><span class="underline">Policy</span>Oracle</a></h1>
  <nav>
    <ul class="sf-menu"> 
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Browse Forecasts", markets_path %></li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Learn to trade <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "How Works", how_works_path %></li>
          <li><%= link_to "Trader Manual", trader_manual_path %></li>
          <li><%= link_to "FAQ", faq_path %></li>
        </ul>
      </li>

      <% if signed_in? %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Logged in as: <%= current_user.name %><span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Portfolio", current_user %></li>
            <li><%= link_to "Trade History", trade_history_path %></li>
            <li><%= link_to "My Orders", my_orders_path %></li>
            <li><%= link_to "Bank History", '#' %></li>
            <li><%= link_to "Leaderboard", '#' %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "Sign in", signin_path %></li>
        <li>/</li>
        <li><%= link_to "Sign up", signup_path %></li>
      <% end %>

      <% if current_user && current_user.admin %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">manage<span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Markets", markets_path %></li>
            <li><%= link_to "Users", users_path %></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </nav>
</header>