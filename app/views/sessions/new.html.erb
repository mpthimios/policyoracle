<% provide(:title, "Sign in") %>
<div class="block2">
  <div class="container_12">
    <section class="content">
      <div class="wrapper">
    		<div class="grid_12 last-col">
    			<div class="hello_box"> Sign in  </div>
            <% flash.each do |key, value| %>
              <div class="col-xs-12 alert alert-<%= key %>"><%= value %></div>
            <% end %>
  		    </div>
    		  <div class="container">
      			<%= form_for :session, url: signin_path, :html => {:class => 'form-horizontal'} do |f| %>
              <div class="form-group">
                <div class="col-xs-2"><label>Email:</label></div>
                <div class="col-xs-4"><%= f.text_field :email %></div>
              </div>
              <div class="form-group">
                <div class="col-xs-2"><label>Password:</label></div>
                <div class="col-xs-4"><%= f.password_field :password %><br/><%= link_to '(forgot password)', new_password_reset_path, :class => "one" %></div>
              </div>
              <div class="form-group">
                <div class="col-xs-2"></div>
                <div class="col-xs-4"><%= f.label :remember_me, class: "checkbox inline" do %>
                  <%= f.check_box :remember_me %>
                  <span>Remember me on this computer</span>
                </div>
              </div>
            <% end %>
            <div class="form-group">
              <div class="col-xs-3 col-md-offset-2"><%= f.submit "Sign in", class: "btn-sample", :style => "width:100px" %></div>
            </div>
            <% end %>
          </div>
          <div class="col-xs-6 col-md-offset-2">
			       <p>New user? <%= link_to "Sign up now!", signup_path %></p>
          </div>
		    </div>
	  	</div>
		</section>
  </div>
</div>