<% provide(:title, 'My Orders') %>
<div class="hireus_block">
  <div class="container_12">
    <section class="">
      <div class="wrapper">
        <h2>My Orders (<%= @holdings.count %>)</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Forecast </th>
              <th>Your Prediction </th>
              <th>Price Purchased</th>
              <th>Current Prediction Price</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% @holdings.each do |holding| %>
              <tr>
                <td><%= holding.contract.market.name if holding.contract %></td>
                <td><%= holding.contract.name if holding.contract %></td>
                <td><%= holding.price_purchased.round(2)*100 %></td>
                <td><%= holding.contract.current_price.round(2)*100 if holding.contract%></td>
                <td><%= holding.quantity %></td> 
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <%= will_paginate(@holdings, :renderer => WillPaginate::ActionView::LinkRenderer) %>

      </div>
    </section>
  </div>
</div>